            </div>
            <div class="form-group">
                <label asp-for="Movie.fecha" class="control-label"></label>
                <input asp-for="Movie.fecha" class="form-control" />
                <span asp-validation-for="Movie.fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.cantidad" class="control-label"></label>
                <input asp-for="Movie.cantidad" class="form-control" />
                <span asp-validation-for="Movie.cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Precio" class="control-label"></label>
                <input asp-for="Movie.Precio" class="form-control" />
                <span asp-validation-for="Movie.Precio" class="text-danger"></span>
